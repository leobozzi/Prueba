<odoo>
    <record id="garaje.aparcamiento_report" model="ir.actions.report">
        <field name="name">Informe de aparcamiento</field>
        <field name="model">garaje.aparcamiento</field>
        <field name="report_type">qweb-pdf</field> <!--Representa el tipo de reporte PDF o web-->
        <field name="report_name">garaje.aparcamiento_report_invoice_view</field>
        <field name="report_file">garaje.aparcamiento_report_invoice</field>
        <field name="attachment_use" eval="True"/>
        <field name="attachment">(object.state in ('open','paid')) and
            ('INV'+(object.number or '').replace('/','')+'.pdf')</field>
        <field name="binding_model_id" ref="model_garaje_aparcamiento"/><!--model_modulo_clase-->
        <field name="binding_type">report</field>
    </record>
    
    <template id="report_invoice">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Report title</h2>
                    <p>This object's name is <span t-field="o.name"/></p>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>